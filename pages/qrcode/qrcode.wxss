/* pages/pshare/qrcode/qrcode.wxss */
.ewm {
  width: 100%;
  height: 100vh;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.inertwo {
  width: 100%;
  height: 90px;
  position: absolute;
  top: 49%;
  bottom: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.award {
  width: 90%;
  height: 90px;
  background: white;
  display: flex;
  border-radius: 7px;
}

.teamaward,
.sucees {
  width: 50%;
  padding: 20px;
  display: flex;
  flex-direction: column;
}

.sucees {
  text-align: center;
  margin-left: 40px;
  position: relative;
}

.shu {
  color: #FF7700;
  margin-left: 20px;
  font-size: 24px;
  font-weight: bold;
}

.hy {
  width: 100%;
  height: 45px;
  position: absolute;
  top: 48%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.seefriends {
  width: 90px;
  height: 28px;
  padding: 10px 20px 10px 20px;
  border-radius: 5px;
  margin-top: 40px;
  background: #007EFF;
  font-size: 20px;
  color: white;
  font-weight: bold;
  text-align: center;
  letter-spacing: 2px;
}

.incode {
  width: 100%;
  height: 100px;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 130px;
}

.code {
  width: 130px;
  height: 120px;
  background-color: #E0DED9;
}

.wm {
  width: 120px;
  height: 110px;
  background: #FFFFFF;
  margin: 5px;
}

.twobtn {
  width: 100%;
  position: absolute;
  text-align: center;
  margin-top: 215px;
  display: flex;
  justify-content: center;
}

.btno,.btnt{
  height: 20px;
  padding: 6px 20px 10px 20px;
  border-radius: 5px;
  background: #007EFF;
  font-size: 16px;
  color: white;
  letter-spacing: 2px;
  line-height: 1.5;
  margin: 0px 10px 0px 10px;
}
.btnt {
  margin-left: 15px;
  height: 37px;
}
@media screen and (max-height:470px){
  .seefriends {
    height: 20px;
    font-size: 16px;
    margin-top: 30px;
  }
  .award {
    height: 80px;
  }
  .hd,.shu{
    font-size: 14px;
  }
  .incode{
    margin-top: 110px;
  }
  .code {
    width: 100px;
    height: 100px;
  }
  .wm {
    width: 90px;
    height: 90px;
  }
  .inertwo{
    top: 46%;
  }
  .twobtn{
    margin-top: 180px;
  }
  .btno{
    font-size: 13px;
    line-height: 2;
  }
}
@media screen and (min-height:600px){
  .incode{
    margin-top: 150px;
  }
  .twobtn{
    margin-top: 245px;
  }
}